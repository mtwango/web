{
    "name": "sphereserver/web",
    "description": "Composer project for website www.sphereserver.eu",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.sphereserver.eu",
    "authors": [
        {
            "name": "Dark Paradise",
            "email": "admin@sphereserver.eu",
            "homepage": "https://www.sphereserver.eu",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "composer/installers": "^2.3",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.6",
        "drupal/antibot": "^2.0",
        "drupal/bootstrap_barrio": "^5.5",
        "drupal/cache_control_override": "^2.0",
        "drupal/core-composer-scaffold": "^11.2",
        "drupal/core-recommended": "^11.2",
        "drupal/gin": "^5.0",
        "drupal/manage_display": "^3.0",
        "drupal/metatag": "^2.2",
        "drupal/pathauto": "^1.14",
        "drupal/redirect": "^1.12",
        "drupal/robotstxt": "^1.6",
        "drupal/simple_sitemap": "^4.2",
        "drupal/smtp": "^1.4",
        "drupal/taxonomy_access_fix": "^4.0",
        "drupal/token": "^1.16",
        "drush/drush": "^13.7"
    },
    "require-dev": {
        "drupal/core-dev": "^11.2",
        "drupal/devel": "^5.5",
        "drupal/masquerade": "^2.0",
        "mglaman/drupal-check": "^1.5",
        "mglaman/phpstan-drupal": "^1.3",
        "phpcompatibility/php-compatibility": "dev-develop",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.6",
        "vimeo/psalm": "^6.13"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        },
        "sort-packages": true
    },
    "extra": {
        "enable-patching": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "htdocs/"
            },
            "file-mapping": {
                "[web-root]/.csslintrc": false,
                "[web-root]/.eslintignore": false,
                "[web-root]/.eslintrc.json": false,
                "[web-root]/.ht.router.php": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/README.md": false,
                "[web-root]/robots.txt": false,
                "[web-root]/web.config": false,
                "[web-root]/modules/README.txt": false,
                "[web-root]/profiles/README.txt": false,
                "[project-root]/recipes/README.txt": false,
                "[web-root]/sites/default/default.services.yml": false,
                "[web-root]/sites/default/default.settings.php": false,
                "[web-root]/sites/development.services.yml": false,
                "[web-root]/sites/example.settings.local.php": false,
                "[web-root]/sites/example.sites.php": false,
                "[web-root]/sites/README.txt": false,
                "[web-root]/themes/README.txt": false
            }
        },
        "installer-types": ["npm-asset", "bower-asset"],
        "installer-paths": {
            "htdocs/core": ["type:drupal-core"],
            "htdocs/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ],
            "htdocs/modules/contrib/{$name}": ["type:drupal-module"],
            "htdocs/profiles/contrib/{$name}": ["type:drupal-profile"],
            "htdocs/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        }
    }
}
